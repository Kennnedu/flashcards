<%= simple_form_for @card do |f| %>
  <% if @card.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@card.errors.count, "error") %> prohibited
        this card from being saved:
      </h2>
      <ul>
        <% @card.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-12">
      <div class="col-md-3">
        <%= f.input :original_text, label: false, placeholder: 'Original Text' %>
      </div>
      <div class="col-md-3">
        <%= f.input :translated_text, label: false, placeholder: 'Translated Text' %>
      </div>
      <div class="col-md-3">
        <%= f.input :picture %>
      </div>
      <div class="col-md-3">
        <%= f.button :submit %>
      </div>
    </div>
  </div>
<% end %>
